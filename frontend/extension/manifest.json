{
  "manifest_version": 3,
  "name": "InforMATE",
  "version": "1.0",
  "description": "Extension to detect the accuracy of news articles and twitter posts.",
  "permissions": [
    "tabs", 
    "scripting", 
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background" : {
    "service_worker" : "background.js"
  }, 
    "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }
    ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
